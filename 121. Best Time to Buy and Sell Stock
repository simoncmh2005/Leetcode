class Solution {
    public int maxProfit(int[] prices) {
        int buy = prices[0];
        int max_profit = 0;
        int profit = 0;
        for(int i=1;i<prices.length;i++){
            if(prices[i]>buy){
                profit = prices[i] - buy;
                if(profit > max_profit){
                    max_profit = profit;
                }
            }else{
                buy = prices[i];
            }
        }
        return max_profit;
    }
}
